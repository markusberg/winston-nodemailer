{
  "name": "@rappestad/winston-nodemailer",
  "version": "3.0.3",
  "description": "A nodemailer transport for winston",
  "main": "./lib/winston-nodemailer.js",
  "typings": "./lib/winston-nodemailer.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "npm run clean:built && npm run clean:git",
    "clean:built": "rimraf **/*.js **/*.js.map **/*.d.ts",
    "clean:git": "git clean -X -d -f",
    "coverage": "nyc npm run unit-tests",
    "test": "npm run build && npm run coverage",
    "unit-tests": "mocha --exit ./test/**/*.spec.js",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rappestad/winston-nodemailer.git"
  },
  "contributors": [
    {
      "name": "Olof Rappestad",
      "email": "olof.rappestad@gmail.com"
    }
  ],
  "keywords": [
    "winston",
    "nodemailer",
    "mail",
    "typescript"
  ],
  "author": "Olof Rappestad <olof.rappestad@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rappestad/winston-nodemailer/issues"
  },
  "homepage": "https://github.com/rappestad/winston-nodemailer#readme",
  "peerDependencies": {
    "nodemailer": "^6.4.18",
    "winston": "^2.4.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-smtp-transport": "^2.7.4",
    "@types/smtp-server": "^3.5.6",
    "chai": "^4.3.0",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.1.0",
    "husky": "^5.1.1",
    "mocha": "^8.3.0",
    "nodemailer": "^6.4.18",
    "nodemailer-smtp-transport": "2.7.4",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "smtp-server": "^3.8.0",
    "typescript": "^3.9.7",
    "winston": "^2.4.5"
  },
  "engines": {
    "node": ">= 10.0"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}
