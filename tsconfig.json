{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": [
    "./lib/**/*.d.ts",
    "./scripts/**/*.d.ts",
    "./test/**/*.d.ts",
    "node_modules"
  ],
  "filesGlob": [
    "./lib/**/*.ts",
    "./scripts/**/*.ts",
    "./test/**/*.ts"
  ]
}
